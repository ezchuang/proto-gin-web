<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{{ if .Title }}{{ .Title }} · {{ .SiteName }}{{ else }}{{ .SiteName }}{{ end }}</title>
    <link rel="stylesheet" href="/static/app.css" />
    {{ if .MetaTags }}
    {{ .MetaTags }}
    {{ else }}
    <meta name="description" content="{{ .SiteDescription }}" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="{{ if .Title }}{{ .Title }}{{ .SiteName }}{{ else }}{{ .SiteName }}{{ end }}" />
    <meta property="og:description" content="{{ .SiteDescription }}" />
    <meta property="og:url" content="{{ .BaseURL }}" />
    <meta property="og:site_name" content="{{ .SiteName }}" />
    {{ end }}
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "WebSite",
      "name": "{{ .SiteName }}",
      "url": "{{ .BaseURL }}"
    }
    </script>
  </head>
  <body>
    <header class="header">
      <h1 class="header__title"><a href="/" class="header__home-link">{{ .SiteName }}</a></h1>
      <nav class="nav nav--right">
        {{ if .AdminUser }}
        <span class="nav__link">{{ .AdminUser | html }}</span>
        <form method="post" action="/admin/logout" class="nav__logout">
          <button type="submit" class="nav__link nav__logout-button">Logout</button>
        </form>
        {{ else }}
        <a href="/admin/login" class="nav__link">Login</a>
        {{ end }}
      </nav>
    </header>
    <main>
      {{ block "content" . }}{{ end }}
    </main>
    <footer>
      <small>Env: {{ .Env }}</small>
    </footer>
  </body>
</html>
