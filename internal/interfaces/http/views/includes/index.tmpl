{{ template "layout" . }}

{{ define "content" }}
<section>
  <h2>{{ .SiteName | html }}</h2>
  <p>Welcome{{ if .User }}, {{ .User | html }}{{ end }}</p>
  <p>{{ .SiteDescription | html }}</p>
  <ul>
    <li>Environment: <code>{{ .Env | html }}</code></li>
    <li>Base URL: <code>{{ .BaseURL | html }}</code></li>
  </ul>
  <p>
    <a href="{{ .DocsURL | html }}" target="_blank" rel="noreferrer noopener">Gin Documentation</a>  · 
    <a href="{{ .PostsURL | html }}">View Posts</a>  · 
    <a href="{{ .APIPostsURL | html }}">Posts API</a>
  </p>
  <p>Health probe: <code>/livez</code> · Readiness: <code>/readyz</code></p>
</section>
{{ end }}
