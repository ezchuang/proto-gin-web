{{ template "layout" . }}

{{ define "content" }}
<section>
  <h2>Admin Dashboard</h2>
  {{ if .Registered }}
  <p class="success">Welcome aboard! Your administrator account is ready.</p>
  {{ end }}
  <p>Signed in as {{ .User | html }}.</p>
  <ul>
    <li><a href="/admin/posts">Manage posts via API</a></li>
    <li>
      <form method="post" action="/admin/logout">
        <button type="submit">Log out</button>
      </form>
    </li>
  </ul>
</section>
{{ end }}
